{
  "compilerOptions": {
      "typeRoots": ["node_modules/@types"],
      "target": "es2017",
      "module": "commonjs",
      "lib": [
          "es2017",
          "dom"
      ],
      "allowJs": true,
      "isolatedModules": false,
      "noImplicitAny": false,
      "sourceMap": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "noImplicitThis": true,
      "strictNullChecks": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "suppressImplicitAnyIndexErrors": true,
      "skipLibCheck": true,
      "outDir": "./public/",
      "rootDir": "./src/"
  },
  "include": [
      "./src/**/*.ts",
      "./src/**/*.js",
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}